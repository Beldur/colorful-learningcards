{
  "rules": {
    ".read": "auth != null",
    ".write": "false",
    "cards": {
      "$uid": {
        "$cardId": {
          ".validate": "newData.hasChildren(['front', 'back', 'color', 'createdAt'])",
          ".indexOn": ["createdAt"],
          "createdAt": {
            ".validate": "newData.isNumber() && newData.val() == now"
          },
          "color": {
            ".validate": "newData.isNumber()"
          },
          "front": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 255"
          },
          "back": {
            ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 255"
          }
        },
        ".write": "$uid === auth.uid"
      }
    }
  }
}
